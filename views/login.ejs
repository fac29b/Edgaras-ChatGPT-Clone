<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ChatGPT Clone</title>
    <link rel="stylesheet" href="./login.css" />
    <style></style>
  </head>
  <body>
    <div class="login-container">
      <a id="loginFailed" style="display: none; color: red"></a>
      <h2>Login</h2>
      <form action="" method="post" onsubmit="SubmitForm(event)">
        <label for="username">Username:</label>
        <input
          class="inputField"
          type="text"
          id="username"
          name="username"
          required
          minlength="4"
          autocomplete="off"
          pattern="[a-zA-Z0-9!$%&@]+"
          title="Letters numbers and !,$,%,&,@ are allowed"
        />

        <label for="password">Password:</label>
        <input
          class="inputField"
          type="password"
          id="password"
          name="password"
          required
          minlength="8"
          autocomplete="off"
          pattern="[a-zA-Z0-9!$%&@]+"
          title="Letters numbers and !,$,%,&,@ are allowed"
        />

        <button type="submit">Log in</button>
      </form>

      <p><a href="/register" class="reg-log-button">Register</a></p>
    </div>
    <script src="./login.js"></script>
  </body>
</html>
